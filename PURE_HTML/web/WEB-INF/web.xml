<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
	<!-- ****************************
	 *								*
	 *		SERVLET FILTERS			*
	 *								*
	 ******************************** -->
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>it.polimi.tiw.pure_html.filter.UserFilter</filter-class>
	</filter>

	<filter>
		<filter-name>AccountFilter</filter-name>
		<filter-class>it.polimi.tiw.pure_html.filter.AccountFilter</filter-class>
	</filter>

	<!-- ****************************
	 *								*
	 *	SERVLET FILTERS MAPPING		*
	 *								*
	 ******************************** -->
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/homepage</url-pattern>
		<url-pattern>/accountState</url-pattern>
		<url-pattern>/success</url-pattern>
		<url-pattern>/fail</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>AccountFilter</filter-name>
		<url-pattern>/accountState</url-pattern>
		<url-pattern>/success</url-pattern>
		<url-pattern>/fail</url-pattern>
	</filter-mapping>

	<!-- ****************************
	 *								*
	 *		FILE ORGANIZATION		*
	 *								*
	 ******************************** -->
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
</web-app>