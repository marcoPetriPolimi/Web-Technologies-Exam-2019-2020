<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
	<!-- ****************************
	 *								*
	 *		CONTEXT PARAMS			*
	 *								*
	 ******************************** -->
	<context-param>
		<param-name>DbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/purehtml?serverTimezone=CET</param-value>
	</context-param>

	<context-param>
		<param-name>DbUser</param-name>
		<param-value>marco_tiw</param-value>
	</context-param>

	<context-param>
		<param-name>DbPassword</param-name>
		<param-value>my_password</param-value>
	</context-param>

	<context-param>
		<param-name>DbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>

	<!-- ****************************
	 *								*
	 *		SERVLET FILTERS			*
	 *								*
	 ******************************** -->
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>it.polimi.tiw.pure_html.filter.UserFilter</filter-class>
	</filter>

	<filter>
		<filter-name>AccountFilter</filter-name>
		<filter-class>it.polimi.tiw.pure_html.filter.AccountFilter</filter-class>
	</filter>

	<!-- ****************************
	 *								*
	 *	SERVLET FILTERS MAPPING		*
	 *								*
	 ******************************** -->
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/CheckTransfer</url-pattern>
		<url-pattern>/homepage</url-pattern>
		<url-pattern>/accountState</url-pattern>
		<url-pattern>/success</url-pattern>
		<url-pattern>/fail</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>AccountFilter</filter-name>
		<url-pattern>/CheckTransfer</url-pattern>
		<url-pattern>/accountState</url-pattern>
		<url-pattern>/success</url-pattern>
		<url-pattern>/fail</url-pattern>
	</filter-mapping>
</web-app>